      h3 Выезд
      +textField({
        blockElements: ["masked date-input", "date-dropdown"], 
        type: "text", 
        placeholder: "ДД.ММ.ГГГГ"
      })
  +dropdown({
    title: 'Гости',
    type: 'guests',
    items: [
      {
        labelTitle: 'Взрослые',
        inputName: 'adults',
        inputValue: 1
      },
      {
        labelTitle: 'Дети',
        inputName: 'children',
        inputValue: 0
      },
      {
        labelTitle: 'Младенцы',
        inputName: 'toddlers',
        inputValue: 0
      },
    ],
  })

  .room-booking-summary
    .room-booking-summary__summary-row
