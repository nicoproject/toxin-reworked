include ../../components/buttons/buttons
include ../../components/dropdown/dropdown

form.form.form-room-booking
  .room-booking-header
    .column
      spam.number-sign №  
      span.room-number 888
      span.room-class.room-class__lux  люкс
    .column
      span.room-price 990
      span.ruble  р 
      span.room-term в сутки        
  .rooms-search-dates-container.flex-between
    .column
      h3 Прибытие
      +textField({
        blockElements: ["masked", "date-input date-dropdown"], 
        type: "text", 
        placeholder: "ДД.ММ.ГГГГ"
      })
