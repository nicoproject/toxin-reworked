extends ../default-layout/default-layout

include ../../components/text-field/text-field
include ../../components/buttons/buttons
include ../../components/checkbox/checkbox
include ../../components/radiobuttons/radiobuttons
include ../../components/bullet-list/bullet-list
include ../../components/rate/rate
include ../../components/features/features
include ../../components/like-button/like-button
include ../../components/review/review
include ../../components/dropdown/dropdown


block variables
  - var title = 'Toxin ReWorked: UI Kit';
  - var description = 'UI Kit element page';
  - var pageClass = 'ui-kit-page';

block content
  .container
    .form-elements
      form(action='', method='POST')
        .form-col
          h3 Text field
          +textField({
            type: 'text',
            placeholder: 'default input'
          })
          +dropdown({
            title: 'dropdown guests',
            type: 'guests',
            items: [
              {
                labelTitle: 'Взрослые',
                inputName: 'adults',
                inputValue: 1
              },
              {
                labelTitle: 'Дети',
                inputName: 'children',
                inputValue: 0
              },
              {
                labelTitle: 'Младенцы',
                inputName: 'toddlers',
                inputValue: 0
              },
            ],
          })
          h3 Masked input
          +textField({
            modificator: 'masked',
          })
          h3 Date Dropdown
          .flex-between
            include ../../components/dropdown-date/dropdown-date
            include ../../components/dropdown-date/dropdown-date
          h3 Email Subscription 
          +textField({
            modificator: 'email',
          })
          +dropdown({
            title: 'dropdown rooms',
            type: 'rooms',
            items: [
              {
                labelTitle: 'Спальни',
                inputName: 'bedrooms',
                inputValue: 1
              },
              {
                labelTitle: 'Кровати',
                inputName: 'beds',
                inputValue: 0
              },
              {
                labelTitle: 'Ванные комнаты',
                inputName: 'bathrooms',
                inputValue: 0
              },
            ],
          })
          +checkbox({
            type: 'expandable',
            title: 'expandable checkbox buttons',
            items: [
              {
              text: 'Завтрак',
              },
              {
              text: 'Письменный стол',
              },
              {
              text: 'Стул для кормления',
              },
              {
              text: 'Кроватка',
              isChecked: true,
              },
              {
              text: 'Телевизор',
              isChecked: true,
              },
              {
              text: 'Шампунь',
              isChecked: true,
              },
            ]
          })
          h3 Features
          +features({items: [
            {
              heading: 'Комфорт',
              description: 'Шумопоглащающие стены',
              icon: 'smile'
            },
            {
              heading: 'Удобство',
              description: 'Окно в каждой из спален',
              icon: 'city'
            },
            ]
          })

        .form-col
          +checkbox({
            items: [
              {
              text: 'Завтрак',
              },
              {
              text: 'Письменный стол',
              },
              {
              text: 'Стул для кормления',
              },
              {
              text: 'Кроватка',
              isChecked: true,
              },
              {
              text: 'Телевизор',
              isChecked: true,
              },
              {
              text: 'Шампунь',
              isChecked: true,
              },
            ]
          })
          h3 Radio Buttons
          +radiobuttons({items: [
            {
              labelText: 'Мужчина',
              checked: true,
              name: 'gender',
              value: 'male'
            },
            {
              labelText: 'Женщина',
              name: 'gender',
              value: 'female'
            },
            ]
          })
          +checkbox({
            type: 'toggle',
            title: 'Toggle',
            items: [
              {
                text: 'Получать спецпредложения',
                isChecked: true,
                toggleName: 'toggle',
                toggleValue: 'receive-ads',
              },
            ]
          })
          h3 Like button

          h3 Rate button
          +rate({
            rating: 5
          })
          +rate({
            rating: 4
          })
          +checkbox({
            type: 'rich',
            title: 'Rich Checkbox Buttons',
            items: [
              {
                title: 'Широкий коридор',
                text: 'Ширина коридоров в номере не менее 91 см.',
                isChecked: true
              },
              {
                title: 'Помощник для инвалидов',
                text: 'На 1 этаже вас встретит специалист и проводит до номера.'
              },

            ]
          })
          h3 Reviews
          +review({
            imgSrc: '../../assets/images/content/avatar_review.png',
            likeCount: 5,
            likeStatus: true,
            author: 'Мурад Сарафанов',
            date: '5 дней назад',
            content: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей',
          })

        .form-col
          h3 Range slider
          input.js-range-slider(type='text', name='my_range', value='')
          h3 Buttons
          +buttons({
            text: 'Click me',
            modificator: 'gradient',
          })
          +buttons({
            text: 'Click me',
            modificator: 'border',
          })
          +buttons({
            text: 'Click me',
          })
          +buttons({
            text: 'Перейти к оплате',
            modificator: 'wide',
          })
          h3 Pagination
          include ../../components/pagination/pagination
          h3 Bullet List
          +bullet-list([
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а выезд до 12:00 ',
          ])



